<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".PlateActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/plateactivity_shape_background">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="9dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/layout_cardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp"
                    android:paddingTop="9dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="8dp">

                    <ImageButton
                        android:id="@+id/btnFinishActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        app:srcCompat="@drawable/uploadactivity_icon_backbutton" />

                    <TextView
                        android:id="@+id/textView_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spo_medium"
                        android:paddingTop="1dp"
                        android:text="익명"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/spo_medium"
                        android:paddingTop="1dp"
                        android:text="님의 반성 한 접시"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/textView_uploadTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:fontFamily="@font/spo_regular"
                        android:textColor="@color/orange"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="3.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/orange" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/textView_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/spo_medium"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/textView_mainText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spo_regular"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView_isOvercome"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:paddingLeft="-3dp"
                            android:src="@drawable/cardplate_icon_isovercome_false" />

                        <TextView
                            android:id="@+id/textView_isOvercomeMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spo_medium"
                            android:hint="아직 개선하지 못했어요"
                            android:paddingTop="1dp"
                            android:textColor="@color/orange"
                            android:textSize="17dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView_feedBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spo_regular"
                        android:hint="댓글을 통해 도움을 줄 수 있어요."
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#E6E6E6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginBottom="7dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spo_medium"
                            android:paddingRight="3dp"
                            android:textColor="@color/orange"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spo_regular"
                            android:text="개의 통감해요 "
                            android:textColor="#939393"
                            android:textSize="13dp" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btn_like"
                        android:layout_width="65dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/plateactivity_icon_liked_false" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.6dp"
                    android:background="#E6E6E6" />

                <ListView
                    android:id="@+id/listView_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView_noComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:gravity="center"
                    android:background="@color/brown1"
                    android:hint="아직 댓글이 없어요."
                    android:textSize="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECECEC"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        app:cardCornerRadius="11dp"
        app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:background="#F3F3F3"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint=" 댓글 작성하기"
            android:layout_weight="1"
            android:textCursorDrawable="@drawable/color_cursor"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"
            android:fontFamily="@font/spo_regular"
            android:padding="10dp"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/btn_uploadComment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="#F3F3F3"
            app:srcCompat="@drawable/plateactivity_icon_uploadcomment" />
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>