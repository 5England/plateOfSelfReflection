<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown2"
    android:orientation="vertical"
    tools:context=".PlateActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="13dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/brown1">

        <LinearLayout
            android:id="@+id/layout_cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/brown1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="4dp"
                android:paddingTop="9dp"
                android:paddingRight="4dp"
                android:paddingBottom="8dp">

                <ImageButton
                    android:id="@+id/btnFinishActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/brown1"
                    app:srcCompat="@drawable/uploadactivity_icon_backbutton" />

                <TextView
                    android:id="@+id/textView_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/spo_medium"
                    android:paddingTop="1dp"
                    android:text="익명"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="8dp"
                    android:paddingTop="1dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/spo_medium"
                    android:text="님의 반성 한 접시"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView_uploadTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="12dp"
                    android:fontFamily="@font/spo_regular"
                    android:text="5분 전"
                    android:textColor="@color/orange"
                    android:textSize="12dp" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.6dp"
                android:background="#9C9C9C" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/textView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/spo_bold"
                    android:text="제목"
                    android:textColor="@color/black"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/textView_mainText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/spo_regular"
                    android:text="내용"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_isOvercome"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="2dp"
                        android:paddingLeft="-7dp"
                        android:src="@drawable/cardplate_icon_isovercome_false" />

                    <TextView
                        android:id="@+id/textView_isOvercomeMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/spo_medium"
                        android:text="아직 개선하지 못했어요."
                       android:textColor="#939393"
                        android:textSize="18dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView_feedBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/spo_regular"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:fontFamily="@font/spo_medium"
                        android:textColor="@color/orange"
                        android:paddingRight="3dp"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:fontFamily="@font/spo_regular"
                        android:textColor="#939393"
                        android:text="개의 통감해요 " />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_like"
                    android:layout_width="65dp"
                    android:layout_height="28dp"
                    android:background="@color/brown1"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="40dp"
                    app:srcCompat="@drawable/plateactivity_icon_notliked" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>