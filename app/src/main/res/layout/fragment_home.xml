<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown1"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/homefragment_shape_hellolayout"
        android:elevation="20dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/helloLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:scaleType="centerCrop"
                android:padding="8dp"
                android:background="@drawable/homefragment_shape_diarybackground"
                android:src="@drawable/diary_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spo_medium"
                        android:text="안녕하세요, "
                        android:textColor="@color/brown4"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/nickName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spo_medium"
                        android:text=""
                        android:textColor="@color/brown4"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spo_medium"
                        android:text="님!"
                        android:textColor="@color/brown4"
                        android:textSize="20dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spo_regular"
                    android:text="당신의 발전을 기다리고 있었어요."
                    android:textColor="#858585"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_changeNickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:textSize="12dp"
                android:fontFamily="@font/spo_regular"
                android:textColor="#A8A8A8"
                android:padding="5dp"
                android:text="닉네임 변경"/>

            <TextView
                android:id="@+id/btn_signOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="12dp"
                android:fontFamily="@font/spo_regular"
                android:elevation="20dp"
                android:textColor="#A8A8A8"
                android:padding="5dp"
                android:text="로그아웃"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/spo_bold"
        android:textSize="16dp"
        android:elevation="10dp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:textColor="@color/brown4"
        android:text="나의 반성 현황"/>

    <LinearLayout
        android:id="@+id/percentBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:elevation="15dp"
        android:background="@drawable/homefragment_shape_curplatelayout"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingRight="35dp"
                android:paddingLeft="35dp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:fontFamily="@font/spo_regular"
                    android:textColor="#A3A3A3"
                    android:text="현재 반성"/>

                <TextView
                    android:id="@+id/plateNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35dp"
                    android:fontFamily="@font/spo_medium"
                    android:textColor="@color/brown3"
                    android:text="0"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="#B8B8B8"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingRight="35dp"
                android:paddingLeft="35dp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:fontFamily="@font/spo_regular"
                    android:textColor="#A3A3A3"
                    android:text="현재 개선"/>

                <TextView
                    android:id="@+id/overcomeNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35dp"
                    android:fontFamily="@font/spo_medium"
                    android:textColor="@color/brown3"
                    android:text="0"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="#B8B8B8"/>

        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/cpb_circlebar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            app:progress_text_size="25dp"
            app:style="solid_line"
            app:progress_stroke_width="10dp"
            app:progress_stroke_cap="round"
            app:progress_start_color="#FFBB00"
            app:progress_end_color="#ABF200"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/spo_bold"
        android:textSize="16dp"
        android:elevation="10dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:textColor="@color/brown4"
        android:text="근사한, 동기부여 메세지"/>

    <LinearLayout
        android:id="@+id/motivationLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/homefragment_shape_moti"
        android:elevation="15dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/spo_regular"
                android:textColor="@color/black"
                android:text="겸손해라. 나의 부족함을"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/spo_regular"
                android:textColor="@color/black"
                android:text="쿨하게 인정하고, 개선해라."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/spo_regular"
                android:textColor="#A8A8A8"
                android:text="완킴"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|right"
            android:paddingBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_newMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:fontFamily="@font/spo_regular"
                android:textColor="@color/orange"
                android:layout_marginRight="15dp"
                android:padding="5dp"
                android:text="나의 메세지 전달"/>

            <TextView
                android:id="@+id/btn_refreshMoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:fontFamily="@font/spo_regular"
                android:textColor="#A8A8A8"
                android:layout_marginRight="35dp"
                android:padding="5dp"
                android:text="새로고침"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>