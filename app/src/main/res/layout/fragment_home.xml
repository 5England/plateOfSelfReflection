<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_homeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_plateactivity_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/helloLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:paddingBottom="25dp"
                android:paddingTop="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:scaleType="centerCrop"
                        android:padding="8dp"
                        android:background="@drawable/shape_homefragment_diarybackground"
                        android:src="@drawable/icon_diary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spo_medium"
                                android:text="안녕하세요, "
                                android:textColor="@color/brown4"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/nickName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spo_medium"
                                android:text=""
                                android:textColor="@color/brown4"
                                android:textSize="18dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spo_medium"
                                android:text="님!"
                                android:textColor="@color/brown4"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spo_regular"
                            android:text="당신의 발전을 기다리고 있었어요."
                            android:textColor="#858585"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D3D3D3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/spo_bold"
                android:textSize="17dp"
                android:elevation="10dp"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:textColor="@color/orange"
                android:text="나의 반성"/>

            <LinearLayout
                android:id="@+id/myStateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:elevation="15dp"
                android:background="@drawable/shape_homefragment_curplatelayout"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingRight="35dp"
                        android:paddingLeft="35dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:fontFamily="@font/spo_regular"
                            android:textColor="#A3A3A3"
                            android:text="현재 반성"/>

                        <TextView
                            android:id="@+id/textView_myAllPlateNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="35dp"
                            android:fontFamily="@font/spo_light"
                            android:textColor="#A3A3A3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingRight="35dp"
                        android:paddingLeft="35dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:fontFamily="@font/spo_regular"
                            android:textColor="@color/orange"
                            android:text="현재 개선"/>

                        <TextView
                            android:id="@+id/textView_myOvercomePlateNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="35dp"
                            android:fontFamily="@font/spo_light"
                            android:textColor="@color/orange" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="0.6dp"
                    android:layout_height="match_parent"
                    android:background="#B8B8B8"/>

                <com.dinuscxj.progressbar.CircleProgressBar
                    android:id="@+id/cpb_myCircleBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="30dp"
                    app:progress_text_size="25dp"
                    app:style="solid_line"
                    app:progress_stroke_width="12dp"
                    app:progress_stroke_cap="round"
                    app:progress_start_color="#eea849"
                    app:progress_end_color="#f46b45"
                    app:progress_text_color="@color/orange"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/spo_bold"
                android:textSize="17dp"
                android:elevation="10dp"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:textColor="@color/brown4"
                android:text="모두의 반성"/>

            <LinearLayout
                android:id="@+id/allStateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:elevation="15dp"
                android:background="@drawable/shape_homefragment_curplatelayout"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingRight="35dp"
                        android:paddingLeft="35dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:fontFamily="@font/spo_regular"
                            android:textColor="#A3A3A3"
                            android:text="현재 반성"/>

                        <TextView
                            android:id="@+id/textView_AllPlateNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="35dp"
                            android:fontFamily="@font/spo_light"
                            android:textColor="#A3A3A3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingRight="35dp"
                        android:paddingLeft="35dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:fontFamily="@font/spo_regular"
                            android:textColor="@color/brown3"
                            android:text="현재 개선"/>

                        <TextView
                            android:id="@+id/textView_OvercomePlateNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="35dp"
                            android:fontFamily="@font/spo_light"
                            android:textColor="@color/brown3" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="0.6dp"
                    android:layout_height="match_parent"
                    android:background="#B8B8B8"/>

                <com.dinuscxj.progressbar.CircleProgressBar
                    android:id="@+id/cpb_AllCircleBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="30dp"
                    app:progress_text_size="25dp"
                    app:style="solid_line"
                    app:progress_stroke_width="12dp"
                    app:progress_stroke_cap="round"
                    app:progress_start_color="@color/brown2"
                    app:progress_end_color="@color/brown3"
                    app:progress_text_color="@color/brown3"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/spo_bold"
                android:textSize="17dp"
                android:elevation="10dp"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:textColor="@color/brown4"
                android:text="근사한, 동기부여 메세지"/>

            <LinearLayout
                android:id="@+id/motivationLayout"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_homefragment_curplatelayout"
                android:elevation="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_motivationFirst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:fontFamily="@font/spo_light"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textView_motivationSecond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/spo_light"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textView_motivationNickName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/spo_regular"
                        android:textColor="#A8A8A8" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|right"
                    android:paddingBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_refreshMotivation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:fontFamily="@font/spo_regular"
                        android:textColor="#A8A8A8"
                        android:layout_marginRight="35dp"
                        android:padding="5dp"
                        android:text="새로고침"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>