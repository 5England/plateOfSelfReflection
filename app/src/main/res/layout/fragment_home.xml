<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_homeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/brown1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/helloLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_homefragment_hellolayout"
                android:elevation="10dp"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="25dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:padding="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_diary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                            <TextView
                                android:id="@+id/nickName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spo_medium"
                                android:text=""
                                android:textColor="@color/brown4"
                                android:textSize="18dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spo_regular"
                            android:text="당신의 발전을 기다리고 있었어요."
                            android:textColor="#858585"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#E4E4E4" />

                <LinearLayout
                    android:id="@+id/myStateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:elevation="1dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.dinuscxj.progressbar.CircleProgressBar
                        android:id="@+id/cpb_myCircleBar"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        app:progress_end_color="@color/green2"
                        app:progress_start_color="@color/green1"
                        app:progress_stroke_cap="round"
                        app:progress_stroke_width="5dp"
                        app:progress_text_color="@color/green2"
                        app:progress_text_size="15dp"
                        app:style="solid_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spo_regular"
                                android:text="현재 반성"
                                android:textColor="#A3A3A3"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/textView_myAllPlateNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spo_light"
                                android:textColor="@color/green2"
                                android:textSize="25dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spo_regular"
                                android:text="현재 개선"
                                android:textColor="#A3A3A3"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/textView_myOvercomePlateNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spo_light"
                                android:textColor="@color/green2"
                                android:textSize="25dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingRight="30dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spo_regular"
                                android:gravity="center"
                                android:text="반성 시작일"
                                android:textColor="#A3A3A3"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/textView_myStartDate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/spo_regular"
                                android:gravity="center"
                                android:textColor="@color/green2"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:background="#E4E4E4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="7dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:elevation="10dp"
                        android:fontFamily="@font/spo_medium"
                        android:text="반성 진단"
                        android:textColor="@color/green2"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textView_plateComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:elevation="10dp"
                        android:fontFamily="@font/spo_light"
                        android:text=""
                        android:textColor="#858585"
                        android:textSize="15dp" />

                </LinearLayout>
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="30dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@drawable/shape_homefragment_categoryscrollbackground"
                        android:gravity="center_vertical"
                        android:elevation="2dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="3dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/brown4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/spo_medium"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:text="카테고리"
                            android:textColor="@color/brown4"
                            android:textSize="17dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_homefragment_categoryscroll"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_category_work"
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@color/brown4"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spo_medium"
                            android:gravity="center"
                            android:text="업무"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spo_light"
                            android:gravity="center"
                            android:text="선택과 집중, 그리고 나태\n"
                            android:textColor="@color/white"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_category_life"
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@color/brown3"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spo_medium"
                            android:gravity="center"
                            android:text="라이프"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spo_light"
                            android:gravity="center"
                            android:text="무심코 지나쳐버린\n일상 속 반성들"
                            android:textColor="@color/white"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_category_habit"
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@color/brown4"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spo_medium"
                            android:gravity="center"
                            android:text="습관"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spo_light"
                            android:gravity="center"
                            android:text="방치했던 습관들\n이제는 고치고 싶어요"
                            android:textColor="@color/white"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_category_health"
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@color/brown3"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spo_medium"
                            android:gravity="center"
                            android:text="건강"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spo_light"
                            android:gravity="center"
                            android:text="건강이 없으면\n아무것도 없어요"
                            android:textColor="@color/white"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_category_spend"
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@color/brown4"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spo_medium"
                            android:gravity="center"
                            android:text="소비"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spo_light"
                            android:gravity="center"
                            android:text="사고 싶다면\n모으기부터"
                            android:textColor="@color/white"
                            android:textSize="13dp" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_homefragment_curplatelayout"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btn_switchAllPlateFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_homefragment_menuallplate"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/spo_regular"
                        android:text="모두의 반성"
                        android:textColor="@color/brown3"
                        android:textSize="15dp" />

                </LinearLayout>

                <View
                    android:layout_width="1.15dp"
                    android:layout_height="match_parent"
                    android:background="#D5D5D5"/>

                <LinearLayout
                    android:id="@+id/btn_switchNotificationFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_menu_notification"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/spo_regular"
                        android:text="알림"
                        android:textColor="@color/brown3"
                        android:textSize="15dp" />

                </LinearLayout>

                <View
                    android:layout_width="1.15dp"
                    android:layout_height="match_parent"
                    android:background="#D5D5D5"/>

                <LinearLayout
                    android:id="@+id/btn_writePlate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_allplatefragment_writeplate"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/spo_regular"
                        android:text="반성하기"
                        android:textColor="@color/brown3"
                        android:textSize="15dp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:elevation="10dp"
                android:fontFamily="@font/spo_bold"
                android:text="키워드 검색"
                android:textColor="@color/brown3"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_homefragment_curplatelayout"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText_searchPlate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:fontFamily="@font/spo_regular"
                    android:hint=" 키워드 입력"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:scrollHorizontally="false"
                    android:textCursorDrawable="@drawable/cursor_brown"
                    android:textSize="15dp" />

                <ImageButton
                    android:id="@+id/btn_searchPlate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    app:srcCompat="@drawable/icon_homefragment_searchplate" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:elevation="10dp"
                android:fontFamily="@font/spo_bold"
                android:text="동기부여 메세지"
                android:textColor="@color/brown3"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/motivationLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_homefragment_curplatelayout"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_motivationFirst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spo_light"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/textView_motivationSecond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/spo_light"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/textView_motivationNickName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/spo_regular"
                        android:textColor="#A8A8A8"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|right"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/btn_refreshMotivation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:fontFamily="@font/spo_regular"
                        android:padding="5dp"
                        android:text="새로고침"
                        android:textColor="@color/brown3"
                        android:textSize="12dp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:elevation="10dp"
                android:fontFamily="@font/spo_bold"
                android:text="모두의 반성"
                android:textColor="@color/brown3"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/allStateLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="30dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/shape_homefragment_curplatelayout"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.dinuscxj.progressbar.CircleProgressBar
                        android:id="@+id/cpb_AllCircleBar"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        app:progress_end_color="@color/brown4"
                        app:progress_start_color="@color/brown3"
                        app:progress_stroke_cap="round"
                        app:progress_stroke_width="5dp"
                        app:progress_text_color="@color/brown3"
                        app:progress_text_size="15dp"
                        app:style="solid_line" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spo_regular"
                                android:text="현재 반성"
                                android:textColor="#A3A3A3"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/textView_AllPlateNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spo_light"
                                android:textColor="@color/brown3"
                                android:textSize="30dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spo_regular"
                                android:text="현재 개선"
                                android:textColor="#A3A3A3"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/textView_OvercomePlateNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spo_light"
                                android:textColor="@color/brown3"
                                android:textSize="30dp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/shape_homefragment_curplatelayout"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":)"
                        android:textColor="@color/brown3"
                        android:textSize="15dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>