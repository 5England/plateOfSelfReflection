<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_cardnotification_background"
    android:elevation="2dp"
    android:padding="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:orientation="vertical">

        <TextView
            android:id="@+id/textView_commentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spo_regular"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"
            android:text="comment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_commentUploadTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spo_regular"
                android:text="업로드 시간"
                android:textColor="#A17C70"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spo_regular"
                android:text=" | "
                android:textColor="#A17C70"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView_commentNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spo_regular"
                android:text="익명"
                android:textColor="#A17C70"
                android:textSize="12dp" />

        </LinearLayout>
</LinearLayout>