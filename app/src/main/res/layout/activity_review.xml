<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown1"
    android:orientation="vertical"
    tools:context=".ReviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_finishActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/brown1"
            app:srcCompat="@drawable/icon_btn_finishactivity" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/spo_regular"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:text="App 피드백 남기기" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="23dp"
            android:fontFamily="@font/spo_thin"
            android:textColor="@color/black"
            android:text="피드백과 함께"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:fontFamily="@font/spo_thin"
                android:textColor="@color/black"
                android:text="나만의 "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:fontFamily="@font/spo_regular"
                android:textColor="@color/green2"
                android:text="근사한"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:fontFamily="@font/spo_regular"
                android:textColor="@color/green2"
                android:text="동기부여 메세지"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:fontFamily="@font/spo_thin"
                android:textColor="@color/black"
                android:text="를"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:textSize="23dp"
            android:fontFamily="@font/spo_thin"
            android:textColor="@color/black"
            android:text="전달해주세요"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            app:srcCompat="@drawable/image_inappreview"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:fontFamily="@font/spo_light"
            android:textColor="#3A3A3A"
            android:text="앱 서비스 개선을 위한 '피드백'과 함께"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:fontFamily="@font/spo_light"
            android:textColor="#3A3A3A"
            android:text="'자신만의 동기부여 메세지 - 닉네임'을"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:fontFamily="@font/spo_light"
            android:textColor="#3A3A3A"
            android:text="전달해주시면 선정하여 업데이트해드립니다"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="13dp"
            android:fontFamily="@font/spo_light"
            android:textColor="#9F9F9F"
            android:text="가급적 메세지는 짧고, 굵게! 부탁드립니다."/>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_review"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:elevation="5dp"
        android:background="@drawable/shape_updatenicknameactivity_updatebtnbackground"
        android:fontFamily="@font/spo_bold"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:text="App 피드백 남기기" />

</LinearLayout>